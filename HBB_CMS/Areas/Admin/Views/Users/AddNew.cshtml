                <label for="inputPassword3" class="col-sm-3 pull-left">Send Password?</label>
                <div class="col-sm-9">
                    <input type="checkbox"> Send this password to the new user by email.
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-3 pull-left">Role</label>
                <div class="col-sm-9">
                    <select class="form-control">
                        <option>Subcriber</option>
                        <option>Subcriber</option>
                        <option>Subcriber</option>
                        <option>Subcriber</option>
                        <option>Subcriber</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> Remember me
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="box-footer">
            <button type="submit" class="btn btn-primary ">Add New User</button>
        </div>
    </form>
</div>




